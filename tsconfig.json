{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react",
    "sourceMap": true,
    "experimentalDecorators": true,
    "experimentalAsyncFunctions": true
  },
  "awesomeTypescriptLoaderOptions": {
    "doTypeCheck": true,
    "useBabel": false,
    "emitRequireType": true,
    "forkChecker": true
  },
  "filesGlob": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "typings/**/*.ts",
    "typings/**/*.tsx",
    "!**/meteor_core/**/*.*",
    "!**/node_modules/**/*.ts"
  ]
}
